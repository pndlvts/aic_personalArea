mixin footer()
    +b("footer")
        +e("wrapper")
            +e("row")
               +e("footer-block")
                    +e("footer-menu", {t: "ul"})
                        +e("footer-menu-item")
                            a(href="#!") О нас
                        +e("footer-menu-item")
                            a(href="#!") Услуги
                        +e("footer-menu-item")
                            a(href="#!") Сотрудники
                        +e("footer-menu-item")
                            a(href="#!") Фотогалерея
                        +e("footer-menu-item")
                            a(href="#!") Контакты
                    +e("copyright") &#169; 2020
               +e("footer-block")
                    +e("title") О сайте
                    +e("footer-about", {t: "ul"})
