                        +e("google-play", {t: "a href=#!"})
               +e("footer-block")
                    +e("title") Обратная связь
                    +b("comment", {t: "form name=footerform method=post", e: "&"})
                        +common-input-block("comment", "Ваше имя", "input name=name type=text required=required placeholder=' '")
